						</customData>
					</Button>
					<Button text="{WeekDate12Hours}" type="Transparent" width="100%" class="hourSize">
						<customData>
							<core:CustomData key="status" value="{WeekDate12Status}" writeToDom="true"/>
							<core:CustomData key="background" value="{path:'WeekDate12Date', formatter:'.leaveFormatter'}" writeToDom="true"/>
						</customData>
					</Button>
					<Button text="{WeekDate13Hours}" type="Transparent" width="100%" class="hourSize">
						<customData>
							<core:CustomData key="status" value="{WeekDate13Status}" writeToDom="true"/>
							<core:CustomData key="background" value="{path:'WeekDate13Date', formatter:'.leaveFormatter'}" writeToDom="true"/>
						</customData>
					</Button>
					<Button text="{WeekDate14Hours}" type="Transparent" width="100%" class="hourSize">
						<customData>
							<core:CustomData key="status" value="{WeekDate14Status}" writeToDom="true"/>
							<core:CustomData key="background" value="{path:'WeekDate14Date', formatter:'.leaveFormatter'}" writeToDom="true"/>
						</customData>
					</Button>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>