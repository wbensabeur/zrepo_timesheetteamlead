<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<VBox width="100%" height="100%">
		<FlexBox class="AddHoursDivider"/>
		<FlexBox alignContent="Start" justifyContent="End">
			<Button class="DeleteButton" icon="sap-icon://delete" type="Transparent" press="OnTimeDelete"/>
		</FlexBox>
		<VBox alignItems="Start" justifyContent="Start" class="sapUiTinyMarginBottom">
			<Label text="Select your Project:"/>
			<Button text="Select your project here" type="Emphasized"/>
			<RadioButtonGroup columns="2" class="sapUiTinyMarginBottom" select="OnchangeTimeSelection">
				<buttons>
					<RadioButton text="Specific time"/>
					<RadioButton text="All Day"/>
				</buttons>
			</RadioButtonGroup>
		</VBox>
		<VBox class="sapUiSmallMarginBottom">
			<Label text="Select hours"/>
			<HBox alignContent="End" justifyContent="End">
				<TimePicker value="00:00" valueFormat="HH:mm" displayFormat="HH:mm" placeholder="Enter Number of Hours and Minutes" change="OnChangeHours">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</TimePicker>
				<ComboBox/>
			</HBox>
		</VBox>
		<customData>
			<core:CustomData key="hrs" value="0"/>
		</customData>
	</VBox>
</core:FragmentDefinition>