<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml" controllerName="com.vinci.timesheet.admin.controller.TeamManage">
	<Page class="VinciBackground">
		<customHeader>
			<Bar design="SubHeader" class="VinciBar">
				<contentLeft><Label text="{i18n>teamMangeSelectionText}" textAlign="Center" class="monthLabelPadding"/></contentLeft>
				<contentRight>
					<Label id="VinciBar" text="{parts:['calendar>/StartDate','calendar>/BiWeekly'],formatter:'.formatter.periodFormat'}" textAlign="Center"
						class="monthLabelPadding"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<Table id="tableHeader" showNoData="false" width="97%" columns="{ path: 'teamHeader>/data' }" noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="true" growingThreshold="12" showSeparators="None"
				inset="false" class="employeeListTable sapUiSmallMarginBegin">
				<columns>
					<Column width="{teamHeader>width}" hAlign="Center">
						<VBox class="tableColumn" alignItems="Center" justifyContent="Center" height="50px">
							<ComboBox class="tableColumnCombo CustomRatioBtn" visible="{teamHeader>ComboVisible}" value="{teamHeader>ColumnTxt1}" enabled="false"/>
							<Label class="tableBULabel" visible="{teamHeader>ComboVisible}" text="{teamHeader>ColumnTxt2}"/>
							<StandardListItem class="DaySelectionStatus" type="{path:'teamHeader>Date', formatter:'.formatter.DaySelectorTeamFormatter'}"
								title="{teamHeader>ColumnTxt1}" description="{teamHeader>ColumnTxt2}" press="OnDatePress"
								visible="{path:'teamHeader>ComboVisible',formatter:'.formatter.booleanNot'}">
								<customData>
									<core:CustomData key="background" value="{path:'teamHeader>Date', formatter:'.formatter.leaveFormatter'}" writeToDom="true"/>
									<core:CustomData key="Date" value="{teamHeader>Date}"/>
								</customData>
								<layoutData>
									<FlexItemData growFactor="1"/>
								</layoutData>
							</StandardListItem>
							<customData>
								<core:CustomData key="background" value="{path:'teamHeader>Date', formatter:'.formatter.leaveFormatter'}" writeToDom="true"/>
							</customData>
						</VBox>
					</Column>
				</columns>
			</Table>
			<ScrollContainer id="TableScroll" width="auto" height="100%" vertical="true" horizontal="false" focusable="true">
				<content>
					<Table id="table" width="{path:'device>/system' , formatter:'.formatter.tableWidth'}" items="{ path: '/EmployeeSet' , suspended: true }"
						columns="{ path: 'teamHeader>/data' }" noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}"
						growing="true" growingScrollToLoad="true" updateFinished="onUpdateFinished" growingThreshold="12" showSeparators="None" inset="false"
						class="employeeListTable sapUiSmallMarginBegin" updateStarted="onUpdateStart">
						<columns>
							<Column width="{teamHeader>width}" hAlign="Center"/>
						</columns>
						<items>
							<ColumnListItem id="columnList" vAlign="Middle" class="sapUiTableTr">
								<cells>
									<VBox class="EmpWeekStatus">
										<StandardListItem class="EmpWeekStatus" type="{path:'IsTimeEntryEnable', formatter:'.formatter.disableTeamEmployees'}" title="{FullName}"
											description="{Section}" press="OnEmployeePress">
											<!--//{WeekTotalHours}H - {WeekTotalAllowances} IPD - {WeekTotalKms}KM-->
											<customData>
												<core:CustomData key="status" value="{path:'IsTimeEntryEnable', formatter:'.formatter.enableTeamDays'}" writeToDom="true"/>
												<core:CustomData key="employee" value="{EmployeeId}"/>
												<core:CustomData key="titlelen" value="{path:'FullName', formatter:'.formatter.titleLength'}" writeToDom="true"/>
											</customData>
											<layoutData>
												<FlexItemData growFactor="1"/>
											</layoutData>
										</StandardListItem>
										<customData>
											<core:CustomData key="status" value="{path:'IsTimeEntryEnable', formatter:'.formatter.enableTeamDays'}" writeToDom="true"/>
										</customData>
									</VBox>
									<Button text="{path:'WeekDate1Hours',type:'Float',formatter:'.formatter.numberFormatter'}" type="Transparent" width="100%" class="hourSize"
										icon="sap-icon://border" press="OnHourPress" enabled="true">
										<customData>
											<core:CustomData key="status" value="{path:'IsTimeEntryEnable', formatter:'.formatter.enableTeamDays'}" writeToDom="true"/>
											<core:CustomData key="background" value="{path:'WeekDate1Date', formatter:'.formatter.leaveFormatter'}" writeToDom="true"/>
											<core:CustomData key="employee" value="{EmployeeId}"/>
											<core:CustomData key="selectedDate" value="{WeekDate1Date}"/>
											<core:CustomData key="selectedView" value="{path:'isByWeekly', formatter:'.formatter.byWeeklyFormattre'}" writeToDom="true"/>
											<core:CustomData key="titlelen" value="{path:'FullName', formatter:'.formatter.titleLength'}" writeToDom="true"/>
										</customData>
									</Button>
									<Button text="{path:'WeekDate2Hours',type:'Float',formatter:'.formatter.numberFormatter'}" type="Transparent" width="100%" class="hourSize"
										icon="sap-icon://border" press="OnHourPress" enabled="true">
										<customData>
											<core:CustomData key="status" value="{path:'IsTimeEntryEnable', formatter:'.formatter.enableTeamDays'}" writeToDom="true"/>
											<core:CustomData key="background" value="{path:'WeekDate2Date', formatter:'.formatter.leaveFormatter'}" writeToDom="true"/>
											<core:CustomData key="employee" value="{EmployeeId}"/>
											<core:CustomData key="selectedDate" value="{WeekDate2Date}"/>
											<core:CustomData key="selectedView" value="{path:'isByWeekly', formatter:'.formatter.byWeeklyFormattre'}" writeToDom="true"/>
											<core:CustomData key="titlelen" value="{path:'FullName', formatter:'.formatter.titleLength'}" writeToDom="true"/>
										</customData>
									</Button>
									<Button text="{path:'WeekDate3Hours',type:'Float',formatter:'.formatter.numberFormatter'}" type="Transparent" width="100%" class="hourSize"
										icon="sap-icon://border" press="OnHourPress" enabled="true">
										<customData>
											<core:CustomData key="status" value="{path:'IsTimeEntryEnable', formatter:'.formatter.enableTeamDays'}" writeToDom="true"/>
											<core:CustomData key="background" value="{path:'WeekDate3Date', formatter:'.formatter.leaveFormatter'}" writeToDom="true"/>
											<core:CustomData key="employee" value="{EmployeeId}"/>
											<core:CustomData key="selectedDate" value="{WeekDate3Date}"/>
											<core:CustomData key="selectedView" value="{path:'isByWeekly', formatter:'.formatter.byWeeklyFormattre'}" writeToDom="true"/>
											<core:CustomData key="titlelen" value="{path:'FullName', formatter:'.formatter.titleLength'}" writeToDom="true"/>
										</customData>
									</Button>
									<Button text="{path:'WeekDate4Hours',type:'Float',formatter:'.formatter.numberFormatter'}" type="Transparent" width="100%" class="hourSize"
										icon="sap-icon://border" press="OnHourPress" enabled="true">
										<customData>
											<core:CustomData key="status" value="{path:'IsTimeEntryEnable', formatter:'.formatter.enableTeamDays'}" writeToDom="true"/>
											<core:CustomData key="background" value="{path:'WeekDate4Date', formatter:'.formatter.leaveFormatter'}" writeToDom="true"/>
											<core:CustomData key="employee" value="{EmployeeId}"/>
											<core:CustomData key="selectedDate" value="{WeekDate4Date}"/>
											<core:CustomData key="selectedView" value="{path:'isByWeekly', formatter:'.formatter.byWeeklyFormattre'}" writeToDom="true"/>
											<core:CustomData key="titlelen" value="{path:'FullName', formatter:'.formatter.titleLength'}" writeToDom="true"/>
										</customData>
									</Button>
									<Button text="{path:'WeekDate5Hours',type:'Float',formatter:'.formatter.numberFormatter'}" type="Transparent" width="100%" class="hourSize"
										icon="sap-icon://border" press="OnHourPress" enabled="true">
										<customData>
											<core:CustomData key="status" value="{path:'IsTimeEntryEnable', formatter:'.formatter.enableTeamDays'}" writeToDom="true"/>
											<core:CustomData key="background" value="{path:'WeekDate5Date', formatter:'.formatter.leaveFormatter'}" writeToDom="true"/>
											<core:CustomData key="employee" value="{EmployeeId}"/>
											<core:CustomData key="selectedDate" value="{WeekDate5Date}"/>
											<core:CustomData key="selectedView" value="{path:'isByWeekly', formatter:'.formatter.byWeeklyFormattre'}" writeToDom="true"/>
											<core:CustomData key="titlelen" value="{path:'FullName', formatter:'.formatter.titleLength'}" writeToDom="true"/>
										</customData>
									</Button>
									<Button text="{path:'WeekDate6Hours', formatter:'.formatter.weekendFormatter'}" type="Transparent" width="100%" class="hourSize"
										icon="sap-icon://border" press="OnHourPress" enabled="true">
										<customData>
											<core:CustomData key="status" value="{path:'IsTimeEntryEnable', formatter:'.formatter.enableTeamDays'}" writeToDom="true"/>
											<core:CustomData key="background" value="{path:'WeekDate6Date', formatter:'.formatter.leaveFormatter'}" writeToDom="true"/>
											<core:CustomData key="employee" value="{EmployeeId}"/>
											<core:CustomData key="selectedDate" value="{WeekDate6Date}"/>
											<core:CustomData key="selectedView" value="{path:'isByWeekly', formatter:'.formatter.byWeeklyFormattre'}" writeToDom="true"/>
											<core:CustomData key="titlelen" value="{path:'FullName', formatter:'.formatter.titleLength'}" writeToDom="true"/>
										</customData>
									</Button>
									<Button text="{path:'WeekDate7Hours', formatter:'.formatter.weekendFormatter'}" type="Transparent" width="100%" class="hourSize"
										icon="sap-icon://border" press="OnHourPress" enabled="true">
										<customData>
											<core:CustomData key="status" value="{path:'IsTimeEntryEnable', formatter:'.formatter.enableTeamDays'}" writeToDom="true"/>
											<core:CustomData key="background" value="{path:'WeekDate7Date', formatter:'.formatter.leaveFormatter'}" writeToDom="true"/>
											<core:CustomData key="employee" value="{EmployeeId}"/>
											<core:CustomData key="selectedDate" value="{WeekDate7Date}"/>
											<core:CustomData key="selectedView" value="{path:'isByWeekly', formatter:'.formatter.byWeeklyFormattre'}" writeToDom="true"/>
											<core:CustomData key="titlelen" value="{path:'FullName', formatter:'.formatter.titleLength'}" writeToDom="true"/>
										</customData>
									</Button>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</ScrollContainer>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="{i18n>cancel}" id="cancelBtn" type="Reject" press="onPressCancel"/>
					<Button text="{i18n>manageTeamEntry}" type="Emphasized"  press="OnManageTeamEntry"/>
					<Button text="{i18n>manageTeamName}" type="Emphasized"  press="OnManageTeamName"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>