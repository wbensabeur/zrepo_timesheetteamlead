<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="com.vinci.timesheet.admin.controller.AddTimesheet">
	<Page class="VinciBackground">
		<customHeader>
			<Bar design="SubHeader" class="VinciBar">
				<contentLeft>
					<Button icon="sap-icon://arrow-left" type="Transparent" press="onPressCancel" class="circleIcon"/>
					<Label text="{i18n>backPlanning}" textAlign="Center" class="monthLabelPadding"/>
				</contentLeft>
				<contentRight>
					<Label text="{parts:['calendar>/StartDate'],formatter:'.formatter.periodFormat'}" textAlign="Center" class="monthLabelPadding"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding VinciTabBar">
				<items>
					<IconTabFilter icon="sap-icon://write-new-document" text="SIMPLE ENTRY" design="Horizontal">
						<VBox width="100%" height="100%">
							<VBox alignItems="Start" justifyContent="Start" class="sapUiLargeMarginTop sapUiSmallMarginBottom">
								<Label text="Select your Project:"/>
								<Button text="Select your project here" type="Emphasized"/>
							</VBox>
							<VBox alignItems="Start" justifyContent="Start" class="sapUiSmallMarginTop sapUiSmallMarginBottom">
								<Label text="Select hours"/>
								<RadioButtonGroup columns="2" class="sapUiMediumMarginBottom">
									<buttons>
										<RadioButton id="RB1-1" text="All Day"/>
										<RadioButton id="RB1-2" text="Specific time"/>
									</buttons>
								</RadioButtonGroup>
							</VBox>
							<VBox alignItems="Start" justifyContent="Start" class="sapUiSmallMarginTop sapUiLargeMarginBottom">
								<Label text="Daily allowances:"/>
								<HBox alignItems="Center" justifyContent="Start">
									<ComboBox/>
									<SegmentedButton selectedKey="kids" class="sapUiLargeMarginBegin sapUiLargeMarginEnd" width="20rem">
										<items>
											<SegmentedButtonItem icon="sap-icon://meal"/>
											<SegmentedButtonItem icon="sap-icon://shipping-status"/>
											<SegmentedButtonItem icon="sap-icon://flight"/>
										</items>
									</SegmentedButton>
									<Label text="Ventile" design="Bold" class="sapUiSmallMarginEnd"/>
									<Switch state="true" type="AcceptReject"/>
								</HBox>
							</VBox>
						</VBox>
					</IconTabFilter>
					<IconTabFilter id="addTimeTab" icon="sap-icon://multiselect-none" text="MULTIPLE ENTRY" design="Horizontal">
						<VBox width="100%" height="100%">
							<HBox alignItems="Start" justifyContent="Start" class="sapUiSmallMarginTop sapUiTinyMarginBottom">
								<Button text="Add new entry" type="Emphasized" press="OnaddNewHourPress">
									<layoutData>
										<FlexItemData growFactor="1"/>
									</layoutData>
								</Button>
								<Label text="{i18n>totalHrs}" class="sapUiSmallMarginTop"/>
								<StepInput class="sapUiSmallMarginBegin" enabled="false" editable="false" max="24" width="6rem" value="25"/>
							</HBox>
							<!--<core:Fragment fragmentName='com.vinci.timesheet.admin.view.AddProjectTime' type='XML' />-->
						</VBox>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://create-leave-request" text="ABSENCE" design="Horizontal">
						<Text text="Notes go here ..."/>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://map" text="KM" design="Horizontal">
						<Text text="Notes go here ..."/>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://add-equipment" text="EQUIPMENT" design="Horizontal">
						<Text text="People content goes here ..."/>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://activity-items" text="SUMMARY" design="Horizontal">
						<Text text="People content goes here ..."/>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="{i18n>cancel}" type="Reject" press="onPressCancel"/>
					<Button text="{i18n>addtimedata}" type="Accept"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>