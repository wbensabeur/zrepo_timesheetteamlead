<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="com.vinci.timesheet.admin.controller.AddTimesheet">
	<Page class="VinciBackground">
		<customHeader>
			<Bar design="SubHeader" class="VinciBar">
				<contentLeft>
					<Button icon="sap-icon://arrow-left" type="Transparent" press="onPressCancel" class="circleIcon"/>
					<Label text="{i18n>backPlanning}" textAlign="Center" class="monthLabelPadding"/>
				</contentLeft>
				<contentRight>
					<Label text="{parts:['calendar>/StartDate'],formatter:'.formatter.periodFormat'}" textAlign="Center" class="monthLabelPadding"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<core:Fragment fragmentName='com.vinci.timesheet.admin.view.AddUpdateTime' type='XML'/>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button id="MainCancelButton" text="{i18n>cancel}" type="Reject" press="onPressCancel"/>
					<Button id="MainAddButton" text="{i18n>addtimedata}" type="Accept"/>
					<Button id="ProjectCancelButton" text="{i18n>cancel}" type="Reject" visible="false" press="onPressProjectCancel"/>
					<Button id="ProjectSelectButton" text="{i18n>select}" type="Accept" visible="false" press="onPressProjectSelect"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>