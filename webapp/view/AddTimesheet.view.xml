<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.vinci.timesheet.admin.controller.AddTimesheet" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page class="VinciBackground">
		<customHeader>
			<Bar design="SubHeader" class="VinciBar">
				<contentLeft>
					<Button icon="sap-icon://arrow-left" type="Transparent" press="onPressCancel" class="circleIcon"/>
					<Label text="{i18n>backPlanning}" textAlign="Center" class="monthLabelPadding"/>
				</contentLeft>
				<contentRight>
					<Label text="{parts:['calendar>/StartDate'],formatter:'.formatter.periodFormat'}" textAlign="Center" class="monthLabelPadding"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding VinciTabBar">
				<items>
					<IconTabFilter icon="sap-icon://write-new-document" text="SIMPLE ENTRY" design="Horizontal">
						<Text text="Info content goes here ..."/>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://multiselect-none" text="MULTIPLE ENTRY" design="Horizontal">
						<Text text="Attachments go here ..."/>
					</IconTabFilter>
						<IconTabFilter icon="sap-icon://create-leave-request"  text="ABSENCE" design="Horizontal">
						<Text text="Notes go here ..."/>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://map"  text="KM" design="Horizontal">
						<Text text="Notes go here ..."/>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://add-equipment" text="EQUIPMENT" design="Horizontal">
						<Text text="People content goes here ..."/>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://activity-items" text="SUMMARY" design="Horizontal">
						<Text text="People content goes here ..."/>
					</IconTabFilter>
					
				</items>
			</IconTabBar>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button text="{i18n>cancel}" type="Reject" press="onPressCancel"/>
					<Button text="{i18n>addtimedata}" type="Accept"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>