<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
	<ViewSettingsDialog confirm="handleAdvanceSearch"   >
		
		<filterItems>
			<ViewSettingsFilterItem text="{i18n>businessUnit}"
				items="{path:'/ValueHelpSet', filters: [{ path: 'ApplicationName', operator: 'EQ', value1: 'TEAMLEAD'},{ path: 'HelpType', operator: 'EQ', value1: 'BU1'}]}"
				multiSelect="false" key="BusinessUnit">
				<items>
					<ViewSettingsItem text="{FieldDescription}" key="{FieldValue}"/>
				</items>
			</ViewSettingsFilterItem >
			<ViewSettingsFilterItem text="{i18n>tablleColTitleTeam}"
				items="{path:'/TeamSet', filters: [{ path: 'BusinessUnit', operator: 'EQ', value1: '{calendar>/data/0/ColumnTxt2}'}]}"
				multiSelect="false" key="BusinessUnit">
				<items>
					<ViewSettingsItem text="{TeamName}" key="{TeamId}"/>
				</items>
			</ViewSettingsFilterItem >
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>